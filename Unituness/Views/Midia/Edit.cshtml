<h2>Edição de Midias</h2>
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Dados da Midia
            </h1>
            <button id="bntSalvar" type="button" class="btn btn-success navbar-right" ng-click="salvar()" style="margin-bottom: 15px;">Salvar</button>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row" ng-controller="">
        <div class="col-lg-12">
            <div class="row">
                <div class="form-group col-lg-3">
                    <label>Nome</label>
                    <input class="form-control ng-pristine ng-valid" ng-model="midia.Nome">
                </div>
                <div class="form-group col-lg-3">
                    <label>Preço (R$)</label>
                    <input class="form-control ng-pristine ng-valid money" money ng-model="midia.Preco">

                </div>
                <div class="form-group col-lg-3">
                    <label>Taxa Unitunes (10%)</label>
                    <input class="form-control ng-pristine ng-valid" disabled>
                </div>
                <div class="form-group col-lg-3">
                    <label>Valor de Venda (R$)</label>
                    <input class="form-control ng-pristine ng-valid" disabled ng-model="pessoa.Nome">
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/scripts/view/midia.js"></script>